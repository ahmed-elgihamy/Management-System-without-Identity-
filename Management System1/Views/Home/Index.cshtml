@{
    ViewData["Title"] = "Home Page";
}

<div class="container my-5">
        <div class="text-center">
            <h1 class="display-4 fw-bold">Welcome to Store System</h1>
            <p class="lead">Your gateway to managing instructors, students, and courses efficiently.</p>
            <a href="#" class="btn btn-primary btn-lg mt-4">Get Started</a>
        </div>

        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Instructors</h5>
                        <p class="card-text">Manage and view all instructors with ease.</p>
                        <a href="/instructor" class="btn btn-outline-primary">View Instructors</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Students</h5>
                        <p class="card-text">Keep track of all students in the system.</p>
                        <a href="/Trainee" class="btn btn-outline-primary">View Students</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">Courses</h5>
                        <p class="card-text">Browse and manage available courses.</p>
                        <a href="/Course" class="btn btn-outline-primary">View Courses</a>
                    </div>
                </div>
            </div>
        </div>
